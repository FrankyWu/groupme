<div class = "span12">
	<%= form_for @group do |f| %>
	  <%= f.label :title, 'Title' %> 
	  <%= f.text_field :title, :input_html => {:class => "input-xxlarge"} %> <br\>
	  <%= f.label :description, 'Description' %>
	  <%= f.text_field :description, :input_html => {:class => "input-xxlarge"} %>

	  <div class = "form-actions">
	    <%= f.submit "Submit", :disable_with => 'Submitting...', :class => "btn btn-primary" %>
	  </div>
	<% end %>
	<%= link_to("Back to index",groups_path) %>
</div>
